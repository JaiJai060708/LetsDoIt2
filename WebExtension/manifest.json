{
  "manifest_version": 3,
  "name": "LetsDoIt - Task Manager",
  "version": "1.0.0",
  "description": "Quick access to your daily tasks and happiness tracking",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/letsdoitlogo.png",
      "32": "icons/letsdoitlogo.png",
      "48": "icons/letsdoitlogo.png",
      "128": "icons/letsdoitlogo.png"
    },
    "default_title": "LetsDoIt Tasks"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

